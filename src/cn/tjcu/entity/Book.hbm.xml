<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="cn.tjcu.entity.Book" table="Book">

	<id name="bid" column="bid">
		<generator class="increment"></generator>
	</id>
	
	<property name="bname" column="bname"></property>
	<property name="bdescription" column="bdescription"></property>
	<property name="bimg" column="bimg"></property>
	<property name="author" column="author"></property>
	<property name="price" column="price"></property>
	<property name="address" column="address"></property>
	

</class>
</hibernate-mapping>